<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator BMI"
        android:textColor="#fff"
        android:textSize="52dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/BMI_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KALORIE"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header1" />


    <TextView
        android:id="@+id/txtWaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Waga"
        android:textColor="#fff"
        android:textSize="30dp"

        app:layout_constraintStart_toStartOf="@+id/Header1"
        app:layout_constraintTop_toBottomOf="@+id/Header1" />
    <TextView
        android:id="@+id/txt_valueWaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:textColor="#fff"
        android:textSize="42dp"
        app:layout_constraintStart_toStartOf="@+id/txtWaga"
        app:layout_constraintTop_toBottomOf="@+id/txtWaga" />


    <TextView
        android:id="@+id/txtWzrost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="100dp"
        android:text="Wzrost"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/Header1"
        app:layout_constraintTop_toBottomOf="@+id/Header1" />

    <TextView
        android:id="@+id/txt_valueWzrost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:textColor="#fff"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="@+id/txtWzrost"
        app:layout_constraintTop_toBottomOf="@+id/txtWzrost"/>

    <TextView
        android:id="@+id/txtKalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="Kalorie"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/Header1"
        app:layout_constraintStart_toStartOf="@+id/Header1"
        app:layout_constraintTop_toBottomOf="@+id/Header1" />

    <TextView
        android:id="@+id/txt_valueKalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#fff"
        android:textSize="58dp"
        app:layout_constraintEnd_toEndOf="@+id/txtKalorie"
        app:layout_constraintStart_toStartOf="@+id/txtKalorie"
        app:layout_constraintTop_toBottomOf="@+id/txtKalorie" />

    <TextView
        android:id="@+id/txt_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♂"
        android:textColor="#fff"
        android:textSize="58dp"
        app:layout_constraintEnd_toEndOf="@+id/txtKalorie"
        app:layout_constraintStart_toStartOf="@+id/txtKalorie"
        app:layout_constraintTop_toBottomOf="@+id/txtWzrost" />

    <Button

        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Wróć"
        app:layout_constraintEnd_toEndOf="@+id/txt_valueKalorie"
        app:layout_constraintRight_toRightOf="@+id/txt_valueKalorie"
        app:layout_constraintStart_toStartOf="@+id/txt_valueKalorie"
        app:layout_constraintTop_toBottomOf="@+id/txt_valueKalorie" />

</android.support.constraint.ConstraintLayout>